{% macro section(title, title_ruby, modifier) -%}
  {% set modifier_class = 'section--' + modifier if modifier else '' -%}
  <section class="section {{ modifier_class }}">
    <div class="section__header">
      <div class="section__header__title">{{ title }}</div>
      <div class="section__header__title-ruby">{{ title_ruby }}</div>
    </div>
    <div class="section__body">
      {{ caller() }}
    </div>
  </section>
{%- endmacro %}
